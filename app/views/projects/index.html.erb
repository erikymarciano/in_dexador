<% @title="Projetos" %>
<p id="notice"><%= notice %></p>


<h1>Projetos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <% unless project.approved %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Mostrar', project %></td>
          <td><%= link_to 'Editar', edit_project_path(project) %></td>
          <td><%= link_to 'Excluir', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

