<p id="notice"><%= notice %></p>

<h1>Projects</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <% if project.approved %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Show', project %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


